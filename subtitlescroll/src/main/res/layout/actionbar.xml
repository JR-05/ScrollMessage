<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EA2000"
    android:paddingTop="18dp">

    <ImageView
        android:id="@+id/actionbar_back"
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:src="@drawable/back" />

    <ImageView
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@id/actionbar_back"
        android:layout_toEndOf="@id/actionbar_back"
        android:layout_toRightOf="@id/actionbar_back"
        android:background="#FFFFFF"></ImageView>

    <TextView
        android:id="@+id/actionbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/actionbar_back"
        android:text="当前用户"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/actionbar_other"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:src="@drawable/refresh" />
</RelativeLayout>